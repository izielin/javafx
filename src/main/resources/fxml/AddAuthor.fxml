<VBox maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.AuthorController">
   <children>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label text="%author.name" />
            <TextField fx:id="authorNameTextField" />
            <Label text="%author.surname" />
            <TextField fx:id="authorSurnameTextField" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addAuthorOnAction" text="%author.buttonAdd" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
