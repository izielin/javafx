<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CategoryController">
   <children>
      <HBox alignment="TOP_CENTER" spacing="20.0">
         <children>
            <Label text="%category.add" />
            <TextField fx:id="categoryTextField" />
            <Button fx:id="categoryAddButton" mnemonicParsing="false" onAction="#addCategoryOnAction" text="%category.buttonAdd" />
            <Label text="%category.choose" />
            <ComboBox fx:id="categoryComboBox" onAction="#onActionComboBo" prefWidth="150.0" />
            <Button fx:id="categoryEditButton" mnemonicParsing="false" onAction="#editCategoryOnAction" text="%category.buttonEdit" />
            <Button fx:id="categoryDeleteButton" mnemonicParsing="false" onAction="#deleteCategoryOnAction" text="%category.buttonDelete" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <TreeView fx:id="categoryTreeView" prefWidth="200.0" showRoot="false" />
   </children>
</VBox>
