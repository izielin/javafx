             </Menu>
             <Menu mnemonicParsing="false" text="%menuBar.MenuTwo">
                  <items>
                     <RadioMenuItem mnemonicParsing="false" onAction="#setCaspian" text="Caspian">
                        <toggleGroup>
                           <ToggleGroup fx:id="styleGroup" />
                        </toggleGroup>
                     </RadioMenuItem>
                     <RadioMenuItem mnemonicParsing="false" onAction="#setModena" selected="true" text="Modena" toggleGroup="$styleGroup" />
                     <SeparatorMenuItem mnemonicParsing="false" />
                     <CheckMenuItem mnemonicParsing="false" onAction="#setAlwaysOnTop" text="%menuBar.checkboxOne" />
                  </items>
             </Menu>
             <Menu mnemonicParsing="false" text="%menuBar.MenuThree">
               <items>
                 <MenuItem mnemonicParsing="false" onAction="#showAbout" text="%menuBar.menuItemTwo" />
               </items>
             </Menu>
           </menus>
         </MenuBar>
             <fx:include fx:id="topMenuButtons" source="TopMenuButtons.fxml" />
      </VBox>
   </top>
</BorderPane>
